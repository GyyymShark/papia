<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 날짜 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜 선택"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" />

            <!-- 증상 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="증상 선택"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioCramps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생리통"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioHeadache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="두통"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioMoodSwings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기분 변화"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복부팽만"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioAcne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여드름"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioFatigue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피로감"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBreastTenderness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가슴 압통"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBackPain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="허리 통증"
                    android:textSize="16sp" />

            </RadioGroup>

            <!-- 심각도 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심각도"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSeverityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통 (3/5)"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekBarSeverity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:layout_marginBottom="24dp" />

            <!-- 메모 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모 (선택사항)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="증상에 대한 추가 정보를 입력하세요"
                android:inputType="textMultiLine"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- 증상 추가 버튼 -->
            <Button
                android:id="@+id/btnAddSymptom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="증상 추가"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:background="?attr/colorPrimary"
                android:textColor="@android:color/white" />

            <!-- 오늘의 증상 목록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 증상"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>